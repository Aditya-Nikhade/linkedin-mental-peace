{
  "manifest_version": 3,
  "name": "LinkedIn Mental Peace",
  "version": "1.0",
  "description": "A chrome extension for a bit of mental peace on LinkedIn",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
